@model IEnumerable<House.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Overzicht Kamers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PriceHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Room room in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => room.location.NameAndPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => room.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => room.PriceHour)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@room.RoomID">Edit</a> |
                <a asp-action="Details" asp-route-id="@room.RoomID">Details</a> |
                <a asp-action="Delete" asp-route-id="@room.RoomID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
