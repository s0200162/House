@model House.ViewModels.EditRoomViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h2>Room</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Room.RoomID" />
            <div class="form-group">
                <label asp-for="Room.Description" class="control-label"></label>
                <input asp-for="Room.Description" class="form-control" />
                <span asp-validation-for="Room.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.PriceHour" class="control-label"></label>
                <input asp-for="Room.PriceHour" class="form-control" />
                <span asp-validation-for="Room.PriceHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.LocationID" class="control-label"></label>
                <select asp-for="Room.LocationID" class="form-control" asp-items="Model.Locations"></select>
                <span asp-validation-for="Room.LocationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
