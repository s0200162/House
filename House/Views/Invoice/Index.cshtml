@model IEnumerable<House.Models.Invoice>

@{
    ViewData["Title"] = "Overzicht Facturen";
}

<h1>Overzicht Facturen</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Datum Aangemaakt
            </th>
            <th>
                Te betalen voor
            </th>
            <th>
                Betaald
            </th>
            <th>
                Totaal
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Invoice invoice in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => invoice.customer.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.EndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.Paid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => invoice.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@invoice.InvoiceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@invoice.InvoiceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@invoice.InvoiceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
